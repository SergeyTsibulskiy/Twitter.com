<!DOCTYPE html>
<html>
<head lang="en">
  <meta charset="UTF-8">
  <title></title>
</head>
<body>
<div class="global">

  <div class="container" style="margin-top: 55px">
    <div class="mainProfile col-md-3 nopadding">
      <div class="head">

      </div>
      <div class="main">

        <div class="dashboardProfileCard">
          <a href="/<%= current_user.fullname %>">
            <%= image_tag @current_user.avatar.url(:medium) %>
          </a>

          <div class="user_name">
            <h3><a>Цибульський</a></h3>
          </div>
          <div class="nickname">
            <h6>@seruy1993</h6>
          </div>
        </div>

        <div class="user_info">
          <ul class="list-inline nomargin">
            <li class="col-md-4 nomargin">
              <a class="" title="<%= pluralize(@count, 'Tweet') %>" href="/<%= current_user.fullname %>" data-element-term="tweet_stats">
                <span class="span">Tweets</span>
                <span class="value"><%= @count %></span>
              </a>
            </li>
            <li class="col-md-4 nomargin">
              <a class="" title="<%= pluralize(@following_user.length, 'Following') %>" href="/following" data-element-term="follower_stats">
                <span class="span">Following</span>
                <span class="value"><%= @following_user.length %></span>
              </a>
            </li>
            <li class="col-md-4 nomargin">
              <a class="" title="<%= pluralize(@followers_user.length, 'Follower') %>" href="/followers" data-element-term="following_stats">
                <span class="span">Followers</span>
                <span class="value"><%= @followers_user.length %></span>
              </a>
            </li>
          </ul>
        </div>
      </div>

      <div class="newTweet">
        <%= form_tag 'addTweet', :class => 'form-signin form-horizontal' do %>
            <div class="form-group">
              <div class="col-md-12">
                <%= text_area :tweet, params[:tweet], class: 'form-control', rows: '1', id: 'taForTweet' %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-1 col-md-offset-5 left">
                <h4 id="counter">140</h4>
              </div>
              <div class="col-md-1 col-md-offset-1">
                <%= submit_tag 'addTweet', id: 'btn_addTweet', class: 'btn btn-primary col-sm-offset-8' %>
              </div>
            </div>
        <% end %>
      </div>
    </div>


    <div class="mainTweets col-md-6">
      <div class="tweetsHead col-md-12">
        <h2>Tweets</h2>
      </div>

      <div class="content col-md-12">
        <div class="row">
          <div class="col-md-12">
            <% @tweets.each do |tweet| %>
                <div class="col-d-12 hover_tweet">
                  <a class="" href="/<%= tweet.user.fullname %>">
                    <%= image_tag tweet.user.avatar.url(:medium), class: 'img_tweet' %>
                    <span class="fullname">
                        <b><%= tweet.user.fullname %></b>
                    </span>
                  </a>
                  <span class="nickname">
                    <span class="at">@</span><%= tweet.user.fullname %>
                  </span>

                  <span class="time-ago">
                    <%= time_ago_in_words((Time.now - tweet.created_at).second.from_now) %>
                  </span>

                  <div class="tweet">
                    <%= tweet.tweet %>
                    <br>
                    <a>
                      <span>Expand</span>
                    </a>

                    <div class="tweet_panel_i right">
                      <ul class="list-inline">
                        <li>
                          <a>
                            <img class="reply" src="/img/reply.png">
                            <b>Reply</b>
                          </a>
                        </li>
                        <li>
                          <a>
                            <img class="retweet" src="/img/retweet.png">
                            <b>Retweet</b>
                          </a>
                        </li>
                        <li>
                          <a>
                            <img class="star" src="/img/star.png">
                            <b>Favorite</b>
                          </a>
                        </li>
                        <li>
                          <div>
                            <div class="dropdown">
                              <a data-toggle="dropdown">
                                <img class="points" src="/img/points.png">
                                <b>More</b>
                              </a>
                              <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                <li><a>Embed Tweet</a></li>
                                <% if @current_user.id == tweet.user_id %>
                                    <li><a class="del" id=<%= tweet.id %>>Delete tweet</a></li>
                                <% end %>
                              </ul>
                            </div>
                          </div>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>

    <div class="follow col-md-3">
      <h3>Who to follow</h3>
      <%= hidden_field_tag :current_user_id, current_user.id %>
      <div class="col-md-12 content">
        <% if @following_user.exists?(:user_id => current_user.id, :follow_id => 9) %>
            <button class="btn btn-danger" id="9">
              <span class="visuallyhidden">Petr Unfollow</span>
            </button>
        <% else %>
            <button class="btn btn-primary btn-follow" id="9">
              <span class="visuallyhidden">Petr Following</span>
            </button>
        <% end %>

      </div>

      <div class="col-md-12 content">
        <% if @following_user.exists?(:user_id => current_user.id, :follow_id => 6) %>
            <button class="btn btn-danger" id="6">
              <span class="visuallyhidden">Sergey Unfollow</span>
            </button>
        <% else %>
            <button class="btn btn-primary btn-follow" id="6">
              <span class="visuallyhidden">Sergey Following</span>
            </button>
        <% end %>
      </div>
      <div class="col-md-12 content">
        <% if @following_user.exists?(:user_id => current_user.id, :follow_id => 8) %>
            <button class="btn btn-danger" id="8">
              <span class="visuallyhidden">Test Unfollow</span>
            </button>
        <% else %>
            <button class="btn btn-primary btn-follow" id="8">
              <span class="visuallyhidden">Test Following</span>
            </button>
        <% end %>
      </div>
    </div>

  </div>
</div>

</body>
</html>